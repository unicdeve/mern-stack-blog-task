{
  "name": "ArticlesRESTApi",
  "description": "Article API",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "Taiwo Ogunola <uniqueomokenny@gmail.com>",
  "scripts": {
    "server": "cross-env NODE_ENV=development nodemon --exec babel-node src/server.js",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./src -s",
    "build": "cd client && npm run build",
    "build-server": "npm run clean && npm run build-babel",
    "start": "npm run build-server && node ./build/server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-sslify": "^1.2.0",
    "formidable": "^1.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.12",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-env": "^2.4.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "cross-env": "^6.0.3",
    "nodemon": "^2.0.1"
  },
  "engines": {
    "node": "10.18.1",
    "npm": "6.13.4"
  }
}
